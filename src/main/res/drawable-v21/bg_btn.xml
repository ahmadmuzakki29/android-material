<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="?android:colorPrimary" />
            <stroke android:width="1dp" android:color="?android:colorPrimaryDark"/>
            <corners android:radius="5dp" />
            <padding  android:left="30dp" android:right="5dp" android:top="5dp" android:bottom="5dp"/>
        </shape>
    </item>  <!-- default -->

    <item android:state_pressed="true" >
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="?android:colorPrimaryDark" />
            <stroke android:width="1dp" android:color="?android:colorPrimary"/>
            <corners android:radius="5dp" />
        </shape>
    </item>
    <!-- pressed -->
</selector>